;; I use dvorak, that's why this layout looks odd
(defcfg
	process-unmapped-keys yes
	log-layer-changes no
)

(defvar
	tap-time 50
	hold-time 200
)

(defsrc
	caps
	spc
)

(deflayer default
	@caps
	@spc
)

(defalias
	caps (tap-hold $tap-time $hold-time esc rctrl)
	spc (tap-hold $tap-time $hold-time spc lmet)
)
